---
import LandingLayout from "./LandingLayout.astro";
import type { Locale } from "../i18n";
import { translations } from "../i18n";

interface Props {
    lang?: Locale;
    title: string;
    description: string;
}

const { lang = "es", title, description } = Astro.props as Props;
const copy = translations[lang];
---

<LandingLayout
    lang={lang}
    seo={{ title, description }}
    navbar={copy.navbar}
    footer={copy.footer}
>
    <section
        class="bg-[#050709] px-4 pb-16 pt-28 text-white md:pt-32 min-h-[calc(100vh-200px)]"
    >
        <div class="mx-auto max-w-4xl">
            <header class="mb-10">
                <p class="text-xs uppercase tracking-[0.25em] text-primary">
                    {lang === "en" ? "Guide" : "Gu√≠a"}
                </p>
                <h1 class="mt-3 text-4xl font-semibold tracking-tight">
                    {title}
                </h1>
                <p class="mt-4 text-white/70">{description}</p>
            </header>
            <article class="guide-content text-white/80"><slot /></article>
        </div>
    </section>
</LandingLayout>

<style>
    :global(.guide-content) {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        line-height: 1.75;
    }

    :global(.guide-content h2) {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
    }

    :global(.guide-content h3) {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
        margin-top: 1.75rem;
        margin-bottom: 0.25rem;
    }

    :global(.guide-content p) {
        margin: 0;
    }

    :global(.guide-content ul),
    :global(.guide-content ol) {
        padding-left: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    :global(.guide-content li strong) {
        color: #fff;
    }
</style>
