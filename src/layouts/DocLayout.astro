---
import LandingLayout from "./LandingLayout.astro";
import type { Locale } from "../i18n";
import { translations } from "../i18n";

interface Props {
    lang?: Locale;
    title: string;
    description: string;
}

const { lang = "es", title, description } = Astro.props as Props;
const copy = translations[lang];
---

<LandingLayout
    lang={lang}
    seo={{ title, description }}
    navbar={copy.navbar}
    footer={copy.footer}
>
    <section class="bg-[#050709] px-4 pb-16 pt-28 text-white md:pt-32">
        <div class="mx-auto max-w-4xl">
            <header
                class="mb-10 flex flex-col gap-6 md:flex-row md:items-center md:justify-between"
            >
                <div>
                    <p
                        class="text-xs uppercase tracking-[0.25em] text-white/50"
                    >
                        Documento legal
                    </p>
                    <h1 class="mt-3 text-4xl font-semibold tracking-tight">
                        {title}
                    </h1>
                    <p class="mt-4 text-white/70">{description}</p>
                </div>
            </header>
            <article class="doc-content text-white/80"><slot /></article>
        </div>
    </section>
</LandingLayout>

<style>
    :global(.doc-content) {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        line-height: 1.75;
    }

    :global(.doc-content h2) {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
    }

    :global(.doc-content h3) {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
        margin-top: 1.75rem;
        margin-bottom: 0.25rem;
    }

    :global(.doc-content p) {
        margin: 0;
    }

    :global(.doc-content ul),
    :global(.doc-content ol) {
        padding-left: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    :global(.doc-content li strong) {
        color: #fff;
    }
</style>
